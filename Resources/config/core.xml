<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sonata.notification.dispatcher_factory" class="Sonata\NotificationBundle\Factory\EventDispatcherFactory"/>
        <service id="sonata.notification.dispatcher" class="stdClass">
            <factory service="sonata.notification.dispatcher_factory" method="createEventDispatcher"/>
            <argument type="service" id="service_container"/>
        </service>
    </services>
</container>
